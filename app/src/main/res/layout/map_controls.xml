<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

<!--    Todo controlsid labi moelda veel-->
    <ImageButton
        android:id="@+id/imageButtonToggleCameraDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_compass" />

    <ImageButton
        android:id="@+id/imageButtonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonToggleCameraDirection"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonToggleCameraDirection"
        app:layout_constraintTop_toTopOf="@+id/imageButtonToggleCameraDirection"
        app:srcCompat="@drawable/checkmark"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/imageButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonToggleCameraDirection"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonConfirm"
        app:layout_constraintTop_toTopOf="@+id/imageButtonToggleCameraDirection"
        app:srcCompat="@drawable/cancel"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewCameraMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>