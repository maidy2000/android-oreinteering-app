<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.add.AddFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editTextTextGpsSessionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textShortMessage"
        android:text="2009 trenn nr X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textShortMessage"
        android:text="Vihmane trenn"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextGpsSessionName"
        app:layout_constraintStart_toStartOf="@+id/editTextTextGpsSessionName"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextGpsSessionName" />

    <EditText
        android:id="@+id/editTextTextRecordedAt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Recorded at"
        android:inputType="textShortMessage"
        android:text="2009-06-15T13:45:30"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextDescription"
        app:layout_constraintStart_toStartOf="@+id/editTextTextDescription"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextDescription" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextRecordedAt"
        app:layout_constraintStart_toStartOf="@+id/editTextTextRecordedAt"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextRecordedAt" />

</androidx.constraintlayout.widget.ConstraintLayout>